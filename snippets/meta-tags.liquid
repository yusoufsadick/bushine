{%- comment -%}
  Meta tags for SEO and social sharing
{%- endcomment -%}

{%- if template.name == 'index' -%}
  <meta property="og:type" content="website">
  <meta property="og:title" content="{{ shop.name }}">
  <meta property="og:description" content="{{ shop.description | default: shop.name | escape }}">
  <meta property="og:url" content="{{ shop.url }}">
  <meta property="og:site_name" content="{{ shop.name }}">
{%- elsif template.name == 'product' -%}
  <meta property="og:type" content="product">
  <meta property="og:title" content="{{ product.title | strip_html | escape }}">
  <meta property="og:description" content="{{ product.description | strip_html | truncate: 200 | escape }}">
  <meta property="og:url" content="{{ shop.url }}{{ product.url }}">
  <meta property="og:site_name" content="{{ shop.name }}">
  {%- if product.featured_media -%}
    <meta property="og:image" content="http:{{ product.featured_media | image_url: width: 1200 }}">
    <meta property="og:image:secure_url" content="https:{{ product.featured_media | image_url: width: 1200 }}">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="{{ 1200 | divided_by: product.featured_media.aspect_ratio | round }}">
  {%- endif -%}
  <meta property="product:price:amount" content="{{ product.selected_or_first_available_variant.price | money_without_currency | strip_html }}">
  <meta property="product:price:currency" content="{{ cart.currency.iso_code }}">
{%- elsif template.name == 'article' -%}
  <meta property="og:type" content="article">
  <meta property="og:title" content="{{ article.title | strip_html | escape }}">
  <meta property="og:description" content="{{ article.excerpt | default: article.summary | strip_html | truncate: 200 | escape }}">
  <meta property="og:url" content="{{ shop.url }}{{ article.url }}">
  <meta property="og:site_name" content="{{ shop.name }}">
  {%- if article.image -%}
    <meta property="og:image" content="http:{{ article.image | image_url: width: 1200 }}">
    <meta property="og:image:secure_url" content="https:{{ article.image | image_url: width: 1200 }}">
  {%- endif -%}
{%- elsif template.name == 'collection' -%}
  <meta property="og:type" content="website">
  <meta property="og:title" content="{{ collection.title | strip_html | escape }}">
  <meta property="og:description" content="{{ collection.description | default: collection.title | strip_html | truncate: 200 | escape }}">
  <meta property="og:url" content="{{ shop.url }}{{ collection.url }}">
  <meta property="og:site_name" content="{{ shop.name }}">
  {%- if collection.image -%}
    <meta property="og:image" content="http:{{ collection.image | image_url: width: 1200 }}">
  {%- endif -%}
{%- else -%}
  <meta property="og:type" content="website">
  <meta property="og:title" content="{{ page_title | escape }}">
  <meta property="og:url" content="{{ shop.url }}{{ page.url }}">
  <meta property="og:site_name" content="{{ shop.name }}">
{%- endif -%}

<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ page_title | escape }}">
<meta name="twitter:description" content="{{ page_description | default: page_title | escape }}">
