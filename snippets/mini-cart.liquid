{%- comment -%}
  Mini Cart Drawer
{%- endcomment -%}

<div class="mini-cart" id="mini-cart">
  <div class="mini-cart__header">
    <h2 class="mini-cart__title">Your Cart</h2>
    <button type="button" class="cart-close" aria-label="Close cart">
      <svg class="icon icon-close" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>
  </div>

  <div class="mini-cart__body">
    <div class="mini-cart__items" id="mini-cart-items">
      {%- if cart.item_count > 0 -%}
        {%- for item in cart.items -%}
          <div class="mini-cart__item" data-key="{{ item.key }}">
            <div class="mini-cart__item-image">
              {%- if item.image -%}
                <img src="{{ item.image | image_url: width: 100 }}" alt="{{ item.title | escape }}" loading="lazy">
              {%- endif -%}
            </div>
            <div class="mini-cart__item-details">
              <h3 class="mini-cart__item-title">{{ item.product.title }}</h3>
              {%- if item.variant.title != 'Default Title' -%}
                <p class="mini-cart__item-variant">{{ item.variant.title }}</p>
              {%- endif -%}
              <div class="mini-cart__item-price">
                {{ item.final_price | money }}
              </div>
              <div class="mini-cart__item-quantity">
                <button type="button" class="quantity-btn" data-action="decrease" data-key="{{ item.key }}">-</button>
                <span class="quantity-value">{{ item.quantity }}</span>
                <button type="button" class="quantity-btn" data-action="increase" data-key="{{ item.key }}">+</button>
              </div>
            </div>
            <button type="button" class="mini-cart__item-remove" data-key="{{ item.key }}" aria-label="Remove item">
              <svg class="icon icon-close" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 4L4 12M4 4L12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </button>
          </div>
        {%- endfor -%}
      {%- else -%}
        <div class="mini-cart__empty">
          <p>Your cart is empty</p>
          <a href="{{ routes.collections_url }}" class="btn btn--primary">Continue Shopping</a>
        </div>
      {%- endif -%}
    </div>
  </div>

  {%- if cart.item_count > 0 -%}
    <div class="mini-cart__footer">
      <div class="mini-cart__totals">
        <div class="mini-cart__subtotal">
          <span>Subtotal</span>
          <span>{{ cart.total_price | money }}</span>
        </div>
      </div>
      <div class="mini-cart__actions">
        <a href="{{ routes.cart_url }}" class="btn btn--outline">View Cart</a>
        <a href="{{ routes.cart_url }}" class="btn btn--primary">Checkout</a>
      </div>
    </div>
  {%- endif -%}
</div>

<style>
  .mini-cart {
    position: fixed;
    top: 0;
    right: 0;
    width: 100%;
    max-width: 420px;
    height: 100vh;
    background: var(--color-white, #FFFFFF);
    box-shadow: -2px 0 10px rgba(0, 0, 0, 0.1);
    z-index: 2000;
    transform: translateX(100%);
    transition: transform 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .mini-cart.is-open {
    transform: translateX(0);
  }

  .mini-cart__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 2rem;
    border-bottom: 1px solid rgba(44, 44, 44, 0.1);
  }

  .mini-cart__title {
    font-family: var(--font-heading, 'Playfair Display', serif);
    font-size: 1.5rem;
    margin: 0;
  }

  .cart-close {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: none;
    border: none;
    cursor: pointer;
    color: var(--color-charcoal, #2C2C2C);
    transition: color 0.2s ease;
  }

  .cart-close:hover {
    color: var(--color-rose, #D4A5A5);
  }

  .mini-cart__body {
    flex: 1;
    overflow-y: auto;
    padding: 1rem;
  }

  .mini-cart__items {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .mini-cart__item {
    display: flex;
    gap: 1rem;
    padding: 1rem;
    border: 1px solid rgba(44, 44, 44, 0.1);
    border-radius: var(--radius-lg, 12px);
  }

  .mini-cart__item-image {
    width: 80px;
    height: 80px;
    flex-shrink: 0;
    border-radius: var(--radius-md, 8px);
    overflow: hidden;
  }

  .mini-cart__item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .mini-cart__item-details {
    flex: 1;
    min-width: 0;
  }

  .mini-cart__item-title {
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
    color: var(--color-charcoal, #2C2C2C);
  }

  .mini-cart__item-variant {
    font-size: 0.875rem;
    color: rgba(44, 44, 44, 0.6);
    margin: 0 0 0.5rem 0;
  }

  .mini-cart__item-price {
    font-weight: 600;
    color: var(--color-rose, #D4A5A5);
    margin-bottom: 0.5rem;
  }

  .mini-cart__item-quantity {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .quantity-btn {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(212, 165, 165, 0.1);
    border: 1px solid rgba(212, 165, 165, 0.2);
    border-radius: var(--radius-md, 8px);
    cursor: pointer;
    font-size: 1.125rem;
    color: var(--color-rose, #D4A5A5);
    transition: all 0.2s ease;
  }

  .quantity-btn:hover {
    background: var(--color-rose, #D4A5A5);
    color: var(--color-white, #FFFFFF);
  }

  .quantity-value {
    min-width: 24px;
    text-align: center;
    font-weight: 500;
  }

  .mini-cart__item-remove {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: none;
    border: none;
    cursor: pointer;
    color: rgba(44, 44, 44, 0.5);
    transition: color 0.2s ease;
    flex-shrink: 0;
  }

  .mini-cart__item-remove:hover {
    color: var(--color-soft-red, #E8B4B8);
  }

  .mini-cart__empty {
    text-align: center;
    padding: 4rem 2rem;
  }

  .mini-cart__empty p {
    font-size: 1.125rem;
    color: rgba(44, 44, 44, 0.6);
    margin-bottom: 2rem;
  }

  .mini-cart__footer {
    padding: 2rem;
    border-top: 1px solid rgba(44, 44, 44, 0.1);
  }

  .mini-cart__totals {
    margin-bottom: 1.5rem;
  }

  .mini-cart__subtotal {
    display: flex;
    justify-content: space-between;
    font-size: 1.125rem;
    font-weight: 600;
    padding-bottom: 1rem;
  }

  .mini-cart__actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .cart-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1900;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }

  .cart-overlay.is-active {
    opacity: 1;
    visibility: visible;
  }

  @media (max-width: 480px) {
    .mini-cart {
      max-width: 100%;
    }
  }
</style>
