{%- comment -%}
  Product Card Snippet - Dark Mode Reusable Product Card Component
{%- endcomment -%}

<div class="product-card-dark glass-card">
  <a href="{{ product.url }}" class="product-card-dark__link">
    <div class="product-card-dark__image">
      {%- if product.featured_image -%}
        <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title | escape }}" loading="lazy" class="product-card-dark__img">
        {%- if product.images.size > 1 -%}
          <img src="{{ product.images[1] | image_url: width: 400 }}" alt="{{ product.title | escape }}" loading="lazy" class="product-card-dark__img product-card-dark__img--hover">
        {%- endif -%}
      {%- else -%}
        <img src="https://images.unsplash.com/photo-1511988617509-a57c8a288659?w=400&q=80" alt="{{ product.title | escape }}" loading="lazy">
      {%- endif -%}
      
      {%- comment -%} Badges {%- endcomment -%}
      <div class="product-card-dark__badges">
        {%- if product.compare_at_price > product.price -%}
          <span class="badge-neon badge-hot">HOT</span>
        {%- endif -%}
        {%- if product.tags contains 'limited' -%}
          <span class="badge-neon badge-limited">LIMITED</span>
        {%- endif -%}
        {%- if product.tags contains 'valentine' -%}
          <span class="badge-neon badge-valentine">VALENTINE</span>
        {%- endif -%}
      </div>

      {%- comment -%} Quick Add Button {%- endcomment -%}
      <div class="product-card-dark__actions">
        {%- if product.available -%}
          <form action="{{ routes.cart_add_url }}" method="post" enctype="multipart/form-data" class="product-card-dark__form">
            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
            <button type="submit" class="quick-add-btn btn-dark btn-dark-primary" data-variant-id="{{ product.selected_or_first_available_variant.id }}">
              Quick Add
            </button>
          </form>
        {%- else -%}
          <span class="btn-dark btn-dark-outline" disabled>Sold Out</span>
        {%- endif -%}
      </div>
    </div>

    <div class="product-card-dark__content">
      <h3 class="product-card-dark__title">{{ product.title }}</h3>
      
      {%- if product.vendor != blank -%}
        <p class="product-card-dark__vendor">{{ product.vendor }}</p>
      {%- endif -%}
      
      <div class="product-card-dark__price">
        {%- if product.compare_at_price > product.price -%}
          <span class="price--compare">{{ product.compare_at_price | money }}</span>
        {%- endif -%}
        <span class="price--current">{{ product.price | money }}</span>
      </div>
    </div>
  </a>
</div>

<style>
  .product-card-dark {
    position: relative;
    overflow: hidden;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .product-card-dark__link {
    display: block;
    text-decoration: none;
    color: inherit;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .product-card-dark__image {
    position: relative;
    width: 100%;
    padding-top: 100%;
    overflow: hidden;
    border-radius: 16px;
    margin-bottom: 1.5rem;
  }

  .product-card-dark__img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.3s ease;
  }

  .product-card-dark__img--hover {
    opacity: 0;
  }

  .product-card-dark:hover .product-card-dark__img:first-child {
    opacity: 0;
  }

  .product-card-dark:hover .product-card-dark__img--hover {
    opacity: 1;
  }

  .product-card-dark__badges {
    position: absolute;
    top: 1rem;
    left: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    z-index: 2;
  }

  .product-card-dark__actions {
    position: absolute;
    bottom: 1rem;
    left: 1rem;
    right: 1rem;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.3s ease;
    z-index: 2;
  }

  .product-card-dark:hover .product-card-dark__actions {
    opacity: 1;
    transform: translateY(0);
  }

  .product-card-dark:hover {
    border-color: rgba(255, 105, 180, 0.4);
    box-shadow: var(--glow-rose, 0 0 20px rgba(255, 105, 180, 0.5));
    transform: translateY(-8px);
  }

  .product-card-dark__form {
    width: 100%;
  }

  .product-card-dark__form .btn-dark {
    width: 100%;
  }

  .product-card-dark__content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .product-card-dark__title {
    font-family: var(--font-heading, 'Playfair Display', serif);
    font-size: 1.125rem;
    margin-bottom: 0.5rem;
    color: var(--text-primary, #ffffff);
  }

  .product-card-dark__vendor {
    font-size: 0.875rem;
    color: var(--text-tertiary, rgba(255, 255, 255, 0.6));
    margin: 0 0 0.75rem 0;
  }

  .product-card-dark__price {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-top: auto;
  }

  .product-card-dark__price .price--compare {
    text-decoration: line-through;
    color: var(--text-tertiary, rgba(255, 255, 255, 0.5));
    font-size: 0.9375rem;
  }

  .product-card-dark__price .price--current {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--neon-pink, #FF1493);
    text-shadow: 0 0 10px rgba(255, 20, 147, 0.5);
  }
</style>
