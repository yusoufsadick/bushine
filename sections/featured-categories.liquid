{%- comment -%}
  Featured Categories Section
{%- endcomment -%}

<section class="featured-categories section" id="featured-categories-{{ section.id }}">
  <div class="container">
    <div class="section__header">
      <h2 class="section__title">{{ section.settings.title | default: 'Shop by Category' }}</h2>
      {%- if section.settings.subtitle != blank -%}
        <p class="section__subtitle">{{ section.settings.subtitle }}</p>
      {%- endif -%}
    </div>

    <div class="featured-categories__grid grid grid--4">
      {%- for block in section.blocks -%}
        <div class="featured-category card" {{ block.shopify_attributes }}>
          <a href="{{ block.settings.link | default: routes.collections_url }}" class="featured-category__link">
            <div class="featured-category__image">
              {%- if block.settings.image != blank -%}
                <img src="{{ block.settings.image | image_url: width: 400 }}" alt="{{ block.settings.title }}" loading="lazy">
              {%- else -%}
                <img src="https://images.unsplash.com/photo-1518199266791-5375a83190b7?w=400" alt="{{ block.settings.title }}" loading="lazy">
              {%- endif -%}
              <div class="featured-category__overlay"></div>
            </div>
            <div class="featured-category__content">
              <h3 class="featured-category__title">{{ block.settings.title }}</h3>
              {%- if block.settings.description != blank -%}
                <p class="featured-category__description">{{ block.settings.description }}</p>
              {%- endif -%}
            </div>
          </a>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .featured-categories {
    background: var(--color-white, #FFFFFF);
  }

  .featured-category {
    position: relative;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .featured-category:hover {
    transform: translateY(-8px);
  }

  .featured-category__link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .featured-category__image {
    position: relative;
    width: 100%;
    padding-top: 75%;
    overflow: hidden;
  }

  .featured-category__image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .featured-category:hover .featured-category__image img {
    transform: scale(1.1);
  }

  .featured-category__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, transparent 0%, rgba(0, 0, 0, 0.3) 100%);
  }

  .featured-category__content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 2rem;
    color: var(--color-white, #FFFFFF);
  }

  .featured-category__title {
    font-family: var(--font-heading, 'Playfair Display', serif);
    font-size: 1.5rem;
    margin: 0 0 0.5rem 0;
    color: var(--color-white, #FFFFFF);
  }

  .featured-category__description {
    font-size: 0.9375rem;
    margin: 0;
    opacity: 0.9;
  }

  @media (max-width: 768px) {
    .featured-categories__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
  }
</style>

