{%- comment -%}
  Valentine Bundles Slider - Dark SaaS Style
{%- endcomment -%}

{%- assign bundle_collection = collections[section.settings.collection] | default: collections.all -%}

<section class="valentine-bundles-slider section" id="bundles-slider-{{ section.id }}">
  <div class="container">
    <div class="section__header">
      <h2 class="section__title gradient-text">{{ section.settings.title | default: 'Valentine Gift Bundles' }}</h2>
      {%- if section.settings.subtitle != blank -%}
        <p class="section__subtitle">{{ section.settings.subtitle }}</p>
      {%- else -%}
        <p class="section__subtitle">Save more when you bundle the perfect gifts together</p>
      {%- endif -%}
    </div>

    <div class="valentine-bundles-slider carousel-container">
      <div class="carousel-track">
        {%- for product in bundle_collection.products limit: section.settings.products_to_show -%}
          <div class="carousel-slide">
            <div class="bundle-card-dark glass-card">
              <a href="{{ product.url }}" class="bundle-card-dark__link">
                <div class="bundle-card-dark__image image-overlay-gradient">
                  {%- if product.featured_image -%}
                    <img src="{{ product.featured_image | image_url: width: 800 }}" alt="{{ product.title }}" loading="lazy">
                  {%- else -%}
                    <img src="https://images.unsplash.com/photo-1511988617509-a57c8a288659?w=800&q=80" alt="{{ product.title }}" loading="lazy">
                  {%- endif -%}
                  
                  {%- if product.compare_at_price > product.price -%}
                    <div class="bundle-card-dark__savings">
                      <span class="badge-neon badge-hot">
                        Save {{ product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price }}%
                      </span>
                    </div>
                  {%- endif -%}
                </div>

                <div class="bundle-card-dark__content">
                  <h3 class="bundle-card-dark__title">{{ product.title }}</h3>
                  
                  {%- if product.description != blank -%}
                    <p class="bundle-card-dark__description">{{ product.description | strip_html | truncate: 120 }}</p>
                  {%- endif -%}
                  
                  <div class="bundle-card-dark__price">
                    {%- if product.compare_at_price > product.price -%}
                      <span class="price--compare">{{ product.compare_at_price | money }}</span>
                    {%- endif -%}
                    <span class="price--current">{{ product.price | money }}</span>
                  </div>

                  <a href="{{ product.url }}" class="btn-dark btn-dark-primary bundle-card-dark__cta">
                    View Bundle
                  </a>
                </div>
              </a>
            </div>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

<style>
  .valentine-bundles-slider {
    background: var(--dark-bg-secondary, #1a1a1a);
    padding: 6rem 0;
  }

  .bundle-card-dark {
    position: relative;
    overflow: hidden;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .bundle-card-dark__link {
    display: block;
    text-decoration: none;
    color: inherit;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .bundle-card-dark__image {
    position: relative;
    width: 100%;
    padding-top: 70%;
    overflow: hidden;
    border-radius: 16px;
    margin-bottom: 1.5rem;
  }

  .bundle-card-dark__image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .bundle-card-dark:hover .bundle-card-dark__image img {
    transform: scale(1.1);
  }

  .bundle-card-dark__savings {
    position: absolute;
    top: 1rem;
    right: 1rem;
    z-index: 2;
  }

  .bundle-card-dark__content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .bundle-card-dark__title {
    font-family: var(--font-heading, 'Playfair Display', serif);
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--text-primary, #ffffff);
  }

  .bundle-card-dark__description {
    font-size: 0.9375rem;
    color: var(--text-secondary, rgba(255, 255, 255, 0.8));
    line-height: 1.6;
    margin-bottom: 1.5rem;
    flex: 1;
  }

  .bundle-card-dark__price {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .bundle-card-dark__price .price--compare {
    text-decoration: line-through;
    color: var(--text-tertiary, rgba(255, 255, 255, 0.5));
    font-size: 1.125rem;
  }

  .bundle-card-dark__price .price--current {
    font-size: 2rem;
    font-weight: 700;
    color: var(--neon-pink, #FF1493);
    text-shadow: 0 0 10px rgba(255, 20, 147, 0.5);
  }

  .bundle-card-dark__cta {
    width: 100%;
    text-align: center;
  }

  .carousel-slide {
    flex: 0 0 100%;
    padding: 0 10px;
  }

  @media (min-width: 768px) {
    .carousel-slide {
      flex: 0 0 50%;
    }
  }

  @media (min-width: 1024px) {
    .carousel-slide {
      flex: 0 0 33.333%;
    }
  }
</style>

{% schema %}
{
  "name": "Valentine Bundles Slider",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Valentine Gift Bundles"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to show",
      "min": 3,
      "max": 12,
      "step": 3,
      "default": 6
    }
  ],
  "presets": [
    {
      "name": "Valentine Bundles Slider"
    }
  ]
}
{% endschema %}
