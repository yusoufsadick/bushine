{%- comment -%}
  Contact Page Template
{%- endcomment -%}

<div class="page-contact">
  <div class="page-contact__hero">
    <div class="container">
      <h1 class="page-contact__title">{{ page.title }}</h1>
      <p class="page-contact__subtitle">We'd love to hear from you. Get in touch with us!</p>
    </div>
  </div>

  <div class="page-contact__content container">
    <div class="page-contact__grid">
      <div class="page-contact__info">
        <h2>Get in Touch</h2>
        <p>Have a question or need help? We're here for you.</p>

        <div class="contact-info">
          <div class="contact-info__item">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M4 4H20C21.1 4 22 4.9 22 6V18C22 19.1 21.1 20 20 20H4C2.9 20 2 19.1 2 18V6C2 4.9 2.9 4 4 4Z" stroke="currentColor" stroke-width="2"/>
              <path d="L22 6L12 13L2 6" stroke="currentColor" stroke-width="2"/>
            </svg>
            <div>
              <h3>Email</h3>
              <a href="mailto:hello@rashine.com">hello@rashine.com</a>
            </div>
          </div>

          <div class="contact-info__item">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M22 16.92V19.92C22.0011 20.1985 21.9441 20.4742 21.8325 20.7292C21.7209 20.9842 21.5573 21.2131 21.3522 21.4012C21.1472 21.5892 20.9053 21.7321 20.6425 21.8207C20.3797 21.9093 20.102 21.9416 19.8275 21.9155C16.7429 21.5821 13.7841 20.3961 11.19 18.4655C8.77382 16.7402 6.72533 14.4919 5.19 11.8755C3.77497 9.48863 2.93506 6.78486 2.74 4C2.71405 3.72609 2.74627 3.44888 2.83464 3.18646C2.92301 2.92404 3.06549 2.68235 3.253 2.478C3.44051 2.27365 3.66915 2.11049 3.924 2C4.17885 1.88951 4.45415 1.83316 4.7325 1.83451H7.7325C8.31509 1.82897 8.88306 2.01693 9.35057 2.37051C9.81808 2.72408 10.163 3.22536 10.34 3.8L11.76 8.06C11.9281 8.62514 12.0734 9.18614 12.195 9.742C12.31 10.26 12.195 10.8 11.88 11.22L10.12 13.72C11.5146 16.1773 13.4626 18.2853 15.82 19.9L18.18 18.1C18.6 17.785 19.14 17.67 19.66 17.785C20.2139 17.9066 20.7749 18.0519 21.34 18.22L25.6 19.64C26.1746 19.817 26.6759 20.1619 27.0295 20.6294C27.3831 21.0969 27.571 21.6649 27.5655 22.2475V25.2475C27.5668 25.5259 27.5105 25.8016 27.4 26.0565C27.2895 26.3115 27.126 26.5403 26.92 26.7285C26.714 26.9166 26.4691 27.0595 26.2025 27.1481C25.9359 27.2367 25.6544 27.2689 25.3755 27.2425C22.2909 26.9091 19.3321 25.7231 16.738 23.7925C14.3218 22.0672 12.2733 19.8189 10.738 17.2025C9.32297 14.8156 8.48306 12.1119 8.288 9.327C8.26205 9.05309 8.29427 8.77588 8.38264 8.51346C8.47101 8.25104 8.61349 8.00935 8.801 7.805C8.98851 7.60065 9.21715 7.43749 9.472 7.327C9.72685 7.21651 10.00215 7.16016 10.2805 7.16151H13.2805" stroke="currentColor" stroke-width="2"/>
            </svg>
            <div>
              <h3>Phone</h3>
              <a href="tel:+1234567890">+1 (234) 567-890</a>
            </div>
          </div>

          <div class="contact-info__item">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M21 10C21 17 12 23 12 23C12 23 3 17 3 10C3 7.61305 3.94821 5.32387 5.63604 3.63604C7.32387 1.94821 9.61305 1 12 1C14.3869 1 16.6761 1.94821 18.364 3.63604C20.0518 5.32387 21 7.61305 21 10Z" stroke="currentColor" stroke-width="2"/>
              <path d="M12 13C13.6569 13 15 11.6569 15 10C15 8.34315 13.6569 7 12 7C10.3431 7 9 8.34315 9 10C9 11.6569 10.3431 13 12 13Z" stroke="currentColor" stroke-width="2"/>
            </svg>
            <div>
              <h3>Address</h3>
              <p>123 Love Street<br>Romance City, RC 12345</p>
            </div>
          </div>
        </div>

        <div class="contact-social">
          <h3>Follow Us</h3>
          <div class="contact-social__links">
            <a href="#" aria-label="Facebook">Facebook</a>
            <a href="#" aria-label="Instagram">Instagram</a>
            <a href="#" aria-label="Twitter">Twitter</a>
          </div>
        </div>
      </div>

      <div class="page-contact__form">
        <h2>Send us a Message</h2>
        {%- form 'contact', class: 'contact-form' -%}
          {%- if form.posted_successfully? -%}
            <div class="contact-form__success">
              <p>Thank you for your message! We'll get back to you soon.</p>
            </div>
          {%- endif -%}

          {%- if form.errors -%}
            <div class="contact-form__errors">
              <ul>
                {%- for field in form.errors -%}
                  <li>{{ form.errors[field] }}</li>
                {%- endfor -%}
              </ul>
            </div>
          {%- endif -%}

          <div class="contact-form__group">
            <label for="contact-name">Name</label>
            <input type="text" id="contact-name" name="contact[name]" required>
          </div>

          <div class="contact-form__group">
            <label for="contact-email">Email</label>
            <input type="email" id="contact-email" name="contact[email]" required>
          </div>

          <div class="contact-form__group">
            <label for="contact-phone">Phone (Optional)</label>
            <input type="tel" id="contact-phone" name="contact[phone]">
          </div>

          <div class="contact-form__group">
            <label for="contact-message">Message</label>
            <textarea id="contact-message" name="contact[body]" rows="6" required></textarea>
          </div>

          <button type="submit" class="btn btn--primary btn--large">Send Message</button>
        {%- endform -%}
      </div>
    </div>
  </div>
</div>

<style>
  .page-contact__hero {
    background: linear-gradient(135deg, rgba(232, 180, 184, 0.1) 0%, rgba(212, 165, 165, 0.1) 100%);
    padding: 4rem 0;
    text-align: center;
  }

  .page-contact__title {
    font-family: var(--font-heading, 'Playfair Display', serif);
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin-bottom: 1rem;
  }

  .page-contact__subtitle {
    font-size: 1.25rem;
    color: rgba(44, 44, 44, 0.7);
  }

  .page-contact__content {
    padding: 4rem 0;
  }

  .page-contact__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
  }

  .contact-info {
    margin: 2rem 0;
  }

  .contact-info__item {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 2rem;
    align-items: flex-start;
  }

  .contact-info__item svg {
    color: var(--color-rose, #D4A5A5);
    flex-shrink: 0;
  }

  .contact-info__item h3 {
    font-size: 1.125rem;
    margin-bottom: 0.5rem;
  }

  .contact-info__item a {
    color: var(--color-rose, #D4A5A5);
  }

  .contact-social {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(44, 44, 44, 0.1);
  }

  .contact-social__links {
    display: flex;
    gap: 1.5rem;
    margin-top: 1rem;
  }

  .contact-social__links a {
    color: var(--color-rose, #D4A5A5);
  }

  .contact-form__group {
    margin-bottom: 1.5rem;
  }

  .contact-form__group label {
    display: block;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .contact-form__group input,
  .contact-form__group textarea {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 2px solid rgba(44, 44, 44, 0.1);
    border-radius: var(--radius-lg, 12px);
    font-family: inherit;
  }

  .contact-form__group input:focus,
  .contact-form__group textarea:focus {
    outline: none;
    border-color: var(--color-rose, #D4A5A5);
  }

  .contact-form__success {
    padding: 1rem;
    background: rgba(76, 175, 80, 0.1);
    border-radius: var(--radius-lg, 12px);
    margin-bottom: 2rem;
    color: #4CAF50;
  }

  .contact-form__errors {
    padding: 1rem;
    background: rgba(244, 67, 54, 0.1);
    border-radius: var(--radius-lg, 12px);
    margin-bottom: 2rem;
    color: #F44336;
  }

  @media (max-width: 1024px) {
    .page-contact__grid {
      grid-template-columns: 1fr;
    }
  }
</style>
